  <label for="username">username:</label><br>
  <input type="text" id="lname" name="username" value="Doe"><br>
  <label for="password">password:</label><br>
  <input type="text" id="lname" name="password" value="Doe"><br>
  <label for="cnf_pass">cnf_pass:</label><br>
  <input type="text" id="lname" name="cnf_pass" value="Doe"><br>
